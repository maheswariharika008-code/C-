//Call by Value:
#include <iostream> 
using namespace std; 
void swap(int x, int y) 
{ 
int temp = x;
x = y;
y = temp;
}
int main() 
{
int a = 01; 
int b = 02;
cout << "Before swap: a = " << a << " b = " << b << endl; 
swap(a, b);
cout << "After swap: a = " << a << " b = " << b << endl; 
return 0;
}
//call by reference
#include <iostream> using namespace std;
void swap(int *a, int *b) {
int temp = *a;
*a = *b;
*b = temp;
}
int main() { int x = 1; 
int y = 2;
cout << "Before swap: x = " << x << " , y = " << y << endl; 
swap(&x, &y);
cout << "After swap: x = " << x << ", y = " << y << endl; 
return 0;
}
